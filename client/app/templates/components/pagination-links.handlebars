{{#if pFirst}}
    {{link-to pFirst (query-params pageNum=pFirst)}}
{{/if}}
{{#if pPrev}}
    {{#link-to (query-params pageNum=pPrev)}}<i class="glyphicon glyphicon-arrow-left"></i>{{/link-to}}
{{/if}}
{{#each pages}}
    {{link-to pageNum (query-params pageNum=pageNum) class=active}}
{{/each}}
{{#if pNext}}
    {{#link-to (query-params pageNum=pNext)}}<i class="glyphicon glyphicon-arrow-right"></i>{{/link-to}}
{{/if}}
{{#if pLast}}
    {{link-to pLast (query-params pageNum=pLast)}}
{{/if}}
